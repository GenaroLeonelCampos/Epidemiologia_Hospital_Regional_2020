@model Epidemiologia.ListaModelos.PerSalL

@{
    ViewData["Title"] = "Agregar";

    List<SelectListItem> lista = ViewBag.ListaTipdoc;
    List<SelectListItem> lista2 = ViewBag.ListaCartserv;
    List<SelectListItem> lista3 = ViewBag.ListaProfesion;
    List<SelectListItem> lista4 = ViewBag.ListaDepartamento;
    List<SelectListItem> lista5 = ViewBag.ListaProvincia;
    List<SelectListItem> lista6 = ViewBag.ListaDistrito;

}

<ol class="breadcrumb badge-dark">
    <table class="egt col-md-12">
        <tr>
            <td> <h1>Agregar Personal de salud</h1></td>
            <td align="right"><h1><a asp-action="Index" class="btn btn-success"><i class="fa fa-home" aria-hidden="true"></i></a></h1></td>
        </tr>
    </table>
</ol>
<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Nombres" class="control-label"></label>
                        <input asp-for="Nombres" class="form-control" />
                        <span asp-validation-for="Nombres" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Apellidos" class="control-label"></label>
                        <input asp-for="Apellidos" class="form-control" />
                        <span asp-validation-for="Apellidos" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="TipdocId" class="control-label"></label>
                        <select asp-for="TipdocId" class="form-control" asp-items="@lista"></select>
                        <span asp-validation-for="TipdocId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="NdocIden" class="control-label"></label>
                        <input asp-for="NdocIden" class="form-control" />
                        <span asp-validation-for="NdocIden" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="CartservId" class="control-label"></label>
                        <select asp-for="CartservId" class="form-control" asp-items="@lista2"></select>
                        <span asp-validation-for="CartservId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="ProfesionId" class="control-label"></label>
                        <select asp-for="ProfesionId" class="form-control" asp-items="@lista3"></select>
                        <span asp-validation-for="ProfesionId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="NColegio" class="control-label"></label>
                        <input asp-for="NColegio" class="form-control" />
                        <span asp-validation-for="NColegio" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Celular" class="control-label"></label>
                        <input asp-for="Celular" class="form-control" />
                        <span asp-validation-for="Celular" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="DepartamentoId" class="control-label"></label>
                        <select asp-for="DepartamentoId" class="form-control" asp-items="@lista4"></select>
                        <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="ProvinciaId" class="control-label"></label>
                        <select asp-for="ProvinciaId" class="form-control" asp-items="@lista5"></select>
                        <span asp-validation-for="ProvinciaId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="DistritoId" class="control-label"></label>
                        <select asp-for="DistritoId" class="form-control" asp-items="@lista6"></select>
                        <span asp-validation-for="DistritoId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>

            @*</div>*@
        </form>
    </div>
</div>