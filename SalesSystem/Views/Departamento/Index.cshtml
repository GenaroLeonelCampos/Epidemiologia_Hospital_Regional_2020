<table class="table" id="table">
    <thead class="badge-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pais.Descripcion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DepartamentoId"><i class="fa fa-edit btn btn-primary" aria-hidden="true"></i></a> |
                    @*<a asp-action="Details" asp-route-id="@item.DepartamentoId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.DepartamentoId" onclick="return confirm('Esta seguro de eliminar el registros?')"> <i class="fa fa-trash btn btn-danger" aria-hidden="true"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/generic.js"></script>
<script src="~/js/sweetalert.js"></script>


<script>

    function Limpiar() {
        document.getElementById("descripcion").value = "";
        document.getElementById("frmFormulario").submit();
    }

</script>